<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>TeachinVietnam.org</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (User.IsInRole("superadmin"))
                    {
                        <li>@Html.ActionLink("JobCenter", "Index", "Job")</li>
                    }
                    @if (User.IsInRole("admin") || User.IsInRole("superadmin"))
                    {
                        <li>@Html.ActionLink("Category", "Index", "Category")</li>
                        <li>@Html.ActionLink("Location", "Index", "Location")</li>
                        <li>@Html.ActionLink("Citizenship", "index", "Citizenship")</li>
                        <li>@Html.ActionLink("EmpType", "Index", "EmploymentType")</li>
                        <li>@Html.ActionLink("JobLevel", "Index", "JobLevel")</li>
                        <li>@Html.ActionLink("EduLevel", "Index", "EduLevel")</li>
                        <li>@Html.ActionLink("YoE", "Index", "YoE")</li>
                        <li>@Html.ActionLink("Lang", "Index", "Language")</li>
                        <li>@Html.ActionLink("Langlvl", "Index", "Langlvl")</li>
                        <li>@Html.ActionLink("OrgType", "Index", "OrgType")</li>
                        <li>@Html.ActionLink("SchoolType", "Index", "SchoolType")</li>
                        <li>@Html.ActionLink("WillToRelocate", "Index", "WillToRelocate")</li>
                        <li>@Html.ActionLink("DesiredTravel", "Index", "DesiredTravel")</li>
                        <li>@Html.ActionLink("Testimonial", "Index", "Testimonial")</li>
                        <li>@Html.ActionLink("CommentT", "Index", "CommentTestimonial")</li>
                        <li>@Html.ActionLink("HiringAdviceCategory", "Index", "HiringAdviceCategory")</li>
                        <li>@Html.ActionLink("HiringAdvice", "Index", "HiringAdvice")</li>
                        <li>@Html.ActionLink("CommentH","Index","CommentHiring")</li>
                        <li>@Html.ActionLink("Preparation", "Index", "Preparation")</li>
                    }
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>
